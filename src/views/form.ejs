<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title><%= title%></title>
		<link
			rel="stylesheet"
			href="styles.css"
		/>
	</head>
	<body>
		<form
			action="/new"
			method="POST"
		>
			<h2>User/Message/Date Input Form:</h2>
			<!-- user, text, date -->
			<label for="message_user">User: </label>
			<input
				type="text"
				name="message_user"
				id="message_user"
			/>
			<label for="message_text">Message:</label>
			<!-- In this SSR Setup, the req.body.<name> is determined
				by the 'name' attribute on the html input element -->
			<input
				type="text"
				name="message_text"
				id="message_text"
			/>
			<!-- <label for="message_date">Date: </label>
			<input type="datetime" /> -->
			<button type="submit">Submit</button>
		</form>
	</body>
</html>
